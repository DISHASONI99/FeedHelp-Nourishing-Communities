<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1EBF3"
    tools:context=".fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="textMultiLine"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.19">

                    <TextView
                        android:id="@+id/editTextText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/white_background"
                        android:drawableEnd="@drawable/img"
                        android:ems="10"
                        android:gravity="top|start"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingTop="50dp"
                        android:text="Hello!"
                        android:textColor="@color/algae"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="166dp"
                    android:layout_height="61dp"
                    android:text="Disha"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/algae"
                    android:textSize="40sp"
                    android:layout_marginLeft="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout6"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout6"
                    app:layout_constraintVertical_bias="0.63" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
                    app:layout_constraintEnd_toEndOf="@+id/textView27"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout6"
                    app:layout_constraintTop_toTopOf="@+id/textView27"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/hello" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/flood_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="start"
                    android:textColor="@color/algae"
                    android:text="Kerala Flood"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/flood"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/flood"
                    android:layout_width="334dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/flood"
                    android:layout_marginTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/flood_txt" />

                <TextView
                    android:id="@+id/dog_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help street animals"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/algae"
                    android:textSize="20dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/flood"
                    app:layout_constraintStart_toStartOf="@+id/dog"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/dog"
                    android:layout_width="334dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/dog"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dog_txt"/>

                <TextView
                    android:id="@+id/save_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save food"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/algae"
                    android:textSize="20dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/dog"
                    app:layout_constraintStart_toStartOf="@+id/hands"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/hands"
                    android:layout_width="334dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/hands"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/save_food"/>

                <TextView
                    android:id="@+id/drought_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help drought affected people"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/algae"
                    android:textSize="20dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/hands"
                    app:layout_constraintStart_toStartOf="@+id/drought"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/drought"
                    android:layout_width="334dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/hunger"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/drought_txt"/>

                <TextView
                    android:id="@+id/ngo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect with our NGO's"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/algae"
                    android:textSize="20dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/drought"
                    app:layout_constraintStart_toStartOf="@+id/ngo"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/ngo"
                    android:layout_width="334dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ngoconnect"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ngo_txt"/>

                <TextView
                    android:id="@+id/org_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sisulu Environmental Centre "
                    android:layout_marginTop="20dp"
                    android:textColor="@color/algae"
                    android:textSize="20dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/ngo"
                    app:layout_constraintStart_toStartOf="@+id/org"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/org"
                    android:layout_width="334dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/sisula"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/org_txt"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>